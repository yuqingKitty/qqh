<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_65"
    android:background="@drawable/icon_shadow_normal"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">
    <ImageView
        android:id="@+id/iv_loan_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_product_default"/>

    <TextView
        android:id="@+id/tv_loan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_loan_icon"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_centerVertical="true"
        android:text="小赢卡贷"
        android:textColor="@color/color_2D2A3B"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_loan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:text="2019/04/16"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_loan_time"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_centerVertical="true"
        android:text="@string/apply_time"
        android:textColor="@color/color_2D2A3B"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>