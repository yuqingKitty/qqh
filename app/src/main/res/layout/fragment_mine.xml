<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_158"
        android:background="@color/color_FFC71D"
        android:paddingTop="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/mine"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:src="@mipmap/icon_setting" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_30">

            <ImageView
                android:id="@+id/mine_head"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/icon_img_default"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mine_head"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp6"
                android:text="152****1259"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_18" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_loan_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_18"
            android:drawableLeft="@mipmap/icon_loan_record"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="@string/loan_record"
            android:textColor="@color/color_181001"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp_53"
            android:background="@color/color_EEEEEE" />

        <TextView
            android:id="@+id/tv_message_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_18"
            android:drawableLeft="@mipmap/icon_message_center"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="@string/message_center"
            android:textColor="@color/color_181001"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp_53"
            android:background="@color/color_EEEEEE" />

        <TextView
            android:id="@+id/tv_my_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_18"
            android:drawableLeft="@mipmap/icon_my_service"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="@string/my_service"
            android:textColor="@color/color_181001"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp_53"
            android:background="@color/color_EEEEEE" />
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>