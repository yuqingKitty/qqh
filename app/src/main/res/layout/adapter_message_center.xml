<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_94">

        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_product_default"/>

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_toRightOf="@id/iv_message_icon"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="取钱花"
            android:textColor="@color/color_181001"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_message_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_message_title"
            android:layout_toRightOf="@id/iv_message_icon"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp6"
            android:text="取钱花秘籍"
            android:textColor="@color/color_717171"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_message_official"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp6"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:background="@drawable/message_official_bg"
            android:layout_toRightOf="@id/tv_message_title"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp8"
            android:text="官方"
            android:textColor="@color/color_181001"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_message_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/icon_arrow_right"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_message_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_91"
        android:text="取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍取钱花秘籍"
        android:textColor="@color/color_A8A8A8"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_EEEEEE"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

</LinearLayout>