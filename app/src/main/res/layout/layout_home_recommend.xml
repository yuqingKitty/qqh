<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:id="@+id/iv_recommend_icon"
            android:layout_width="@dimen/dp4"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:background="@color/color_FFC71D" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_toRightOf="@id/iv_recommend_icon"
            android:text="@string/today_recommend"
            android:textColor="@color/color_181001"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.zdjf.qqh.ui.customview.MyRecyclerView
        android:id="@+id/home_recommend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"/>
</LinearLayout>